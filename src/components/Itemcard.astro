---

{
    cardList.map((car) => (
        <div
            class="duration-300 min-w-64 p-4 hover:bg-white group"
            style="font-family: Roboto;"
        >
            <img
                class="thumb justify-self-center rounded"
                src={"/productImage/" + car.imgsrc}
            />
            <article class="text-wrap align-middle text-center">
                <h3 class="duration-100 text-red-600 text-xl group-hover:font-bold">
                    {car.tit}
                </h3>
                <p
                    class="duration-100 text-lg ml-10 mr-10 text-justify group-hover:text-black text-white"
                    style="font-family: Roboto;"
                >
                    {car.des}
                </p>
            </article>
        </div>
    ))
}
